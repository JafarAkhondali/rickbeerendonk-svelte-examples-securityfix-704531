{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["svelte", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:svelte/recommended",
    "plugin:svelte/prettier"
  ],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte/svelte"
    }
  ],
  "rules": {
    "no-debugger": 1,
    "semi": [2, "always"]
  }
}
